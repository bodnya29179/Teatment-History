{
  "name": "treatment-history",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "start-web": "npm-run-all --parallel client-run server",
    "start-desktop": "npm-run-all --sequential client-build electron-run",
    "build-desktop": "npm-run-all --sequential client-build electron-pack",
    "client-run": "ng serve --open",
    "client-build": "ng build --base-href ./",
    "electron-run": "electron .",
    "electron-pack": "npx electron-builder",
    "server": "nodemon server/server.js"
  },
  "build": {
    "appId": "com.electron.treatmenthistory",
    "productName": "Treatment History",
    "executableName": "treatment-history",
    "directories": {
      "output": "build"
    },
    "files": [
      "dist/**/*",
      "server/**/*",
      "main.js",
      "node_modules/uuid/**/*",
      "node_modules/archiver/**/*",
      "node_modules/archiver-utils/**/*",
      "node_modules/unzipper/**/*",
      "node_modules/json-server/**/*",
      "node_modules/express/**/*",
      "node_modules/express-fileupload/**/*",
      "node_modules/body-parser/**/*"
    ],
    "asarUnpack": [
      "node_modules/**",
      "server/**"
    ],
    "win": {
      "target": "nsis",
      "icon": "src/assets/icons/favicon.ico"
    },
    "mac": {
      "icon": "src/assets/icons/favicon.icns"
    },
    "linux": {
      "icon": "src/assets/icons/favicon.png"
    }
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^17.3.0",
    "@angular/common": "^17.3.0",
    "@angular/compiler": "^17.3.0",
    "@angular/core": "^17.3.0",
    "@angular/forms": "^17.3.0",
    "@angular/platform-browser": "^17.3.0",
    "@angular/platform-browser-dynamic": "^17.3.0",
    "@angular/router": "^17.3.0",
    "@ngrx/effects": "^17.2.0",
    "@ngrx/store": "^17.2.0",
    "@ngrx/store-devtools": "^17.2.0",
    "@ngx-translate/core": "^15.0.0",
    "@ngx-translate/http-loader": "^8.0.0",
    "@types/electron": "^1.6.10",
    "archiver": "^7.0.1",
    "body-parser": "^1.20.3",
    "express": "^4.21.0",
    "express-fileupload": "^1.5.1",
    "json-server": "^0.17.4",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "unzipper": "^0.12.3",
    "uuid": "^10.0.0",
    "wait-on": "^8.0.1",
    "zone.js": "~0.14.3"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^17.3.7",
    "@angular/cli": "^17.3.7",
    "@angular/compiler-cli": "^17.3.0",
    "electron": "^32.2.0",
    "electron-builder": "^25.1.7",
    "nodemon": "^3.1.7",
    "npm-run-all": "^4.1.5",
    "typescript": "~5.4.2"
  }
}
